{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Discord": {
      "$ref": "#/$defs/providerSettings"
    },
    "Notion": {
      "$ref": "#/$defs/providerSettings"
    },
    "OpenAi": {
      "$ref": "#/$defs/providerSettings"
    }
  },
  "additionalProperties": false,
  "required": [
    "Discord",
    "Notion",
    "OpenAi"
  ],
  "$defs": {
    "varType": {
      "type": "string",
      "enum": [
        "string",
        "datetime",
        "integer",
        "float",
        "boolean",
        "object"
      ]
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "Discord": {
          "$ref": "#/$defs/dependencyRule"
        },
        "Notion": {
          "$ref": "#/$defs/dependencyRule"
        },
        "OpenAi": {
          "$ref": "#/$defs/dependencyRule"
        }
      }
    },
    "dependencyRule": {
      "type": "object",
      "properties": {
        "Optional": {
          "type": "boolean",
          "default": false
        },
        "Require": {
          "type": "string",
          "enum": [
            "Single",
            "Multiple"
          ]
        }
      },
      "required": [
        "Require"
      ]
    },
    "parameter": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Type": {
          "$ref": "#/$defs/varType"
        }
      },
      "required": [
        "Name",
        "Description",
        "Type"
      ]
    },
    "fact": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Type": {
          "$ref": "#/$defs/varType"
        }
      },
      "required": [
        "Name",
        "Description",
        "Type"
      ]
    },
    "trigger": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Icon": {
          "type": "string"
        },
        "Parameters": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "$ref": "#/$defs/parameter"
            }
          }
        },
        "Facts": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "type": "object",
              "properties": {
                "Name": {
                  "type": "string"
                },
                "Description": {
                  "type": "string"
                },
                "Type": {
                  "$ref": "#/$defs/varType"
                }
              },
              "required": [
                "Name",
                "Description",
                "Type"
              ]
            }
          }
        },
        "Dependencies": {
          "$ref": "#/$defs/dependencies"
        }
      },
      "required": [
        "Name",
        "Description",
        "Icon",
        "Parameters",
        "Facts",
        "Dependencies"
      ]
    },
    "action": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Icon": {
          "type": "string"
        },
        "Parameters": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "$ref": "#/$defs/parameter"
            }
          }
        },
        "Facts": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "$ref": "#/$defs/fact"
            }
          }
        },
        "Dependencies": {
          "$ref": "#/$defs/dependencies"
        }
      },
      "required": [
        "Name",
        "Description",
        "Icon",
        "Parameters",
        "Facts",
        "Dependencies"
      ]
    },
    "providerSettings": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "IconUri": {
          "type": "string",
          "format": "uri"
        },
        "Color": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "Triggers": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "$ref": "#/$defs/trigger"
            }
          }
        },
        "Actions": {
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "$ref": "#/$defs/action"
            }
          }
        }
      },
      "required": [
        "Name",
        "IconUri",
        "Color",
        "Triggers",
        "Actions"
      ]
    }
  }
}
